---
const { plans } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
  {plans.map((plan) => (
    <div class="bg-white p-6 rounded-lg shadow-lg text-center">
      <h3 class="text-xl font-semibold mb-2">{plan.title}</h3>
      <p class="text-2xl font-bold mb-4">{plan.price}</p>
      <ul class="list-disc list-inside mb-4">
        {plan.features.map((feature) => (
          <li>{feature}</li>
        ))}
      </ul>
      <a
        href={plan.action.href}
        class={`inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md shadow-sm text-white ${plan.action.variant === 'primary' ? 'bg-primary hover:bg-primary-dark' : 'bg-secondary hover:bg-secondary-dark'} focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary`}
      >
        {plan.action.text}
      </a>
    </div>
  ))}
</div>
