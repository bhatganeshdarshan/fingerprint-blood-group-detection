---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Request Blood Donation',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      { text: 'Learn more', href: '#features' },
    ]}
    image={{
      src: '~/assets/images/blood-donation-hero.jpg',
      alt: 'Blood Donation Hero Image',
      style: {
        width: '1108px',
        height: '360px',
        objectFit: 'cover',
      }
    }}
  >
    <Fragment slot="title">
      Request<span class="hidden xl:inline"></span>
      <span class="text-accent dark:text-white highlight"> Blood Donation</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Help save lives by requesting blood donations. Your request ensures timely availability for those in need.</span>
      </span>
      <span class="block mb-1 sm:hidden font-bold text-grey-600">------------------------------</span>
      Fill out the form below to request blood donations for you or your loved ones.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Why Request Blood?"
    title="Benefits of Blood Donation Requests"
    subtitle="Did you know? Requesting blood donations helps ensure that the necessary blood is available for patients in need during emergencies or treatments."
    items={[
      {
        title: 'Timely Availability',
        description: 'Ensure that blood is available when needed, especially in emergencies or surgeries.',
      },
      {
        title: 'Support for Patients',
        description: 'Your request helps hospitals manage their blood supply more effectively and support patient needs.',
      },
      {
        title: 'Community Impact',
        description: 'By requesting blood, you contribute to a stronger community health infrastructure.',
      },
      {
        title: 'Simple Process',
        description: 'Our form is designed to be easy to fill out, ensuring a smooth process for requesting blood donations.',
      },
    ]}
  />

  <!-- Blood Donation Request Form **************** -->

  <section class="py-12 bg-gray-100">
    <div class="container mx-auto px-4">
      <h2 class="text-2xl font-bold mb-4">Request Blood Donation</h2>
      <p class="text-lg mb-8">
        Please fill out the form below to request blood donations. Our team will process your request and get back to you as soon as possible.
      </p>
      <form action="/submit-blood-request" method="POST" class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700">Full Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm"
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm"
            />
          </div>
          <div>
            <label for="phone" class="block text-sm font-medium text-gray-700">Phone Number</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              required
              class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm"
            />
          </div>
          <div>
            <label for="location" class="block text-sm font-medium text-gray-700">Location</label>
            <input
              type="text"
              id="location"
              name="location"
              required
              class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm"
            />
          </div>
          <div class="col-span-2">
            <label for="details" class="block text-sm font-medium text-gray-700">Additional Details</label>
            <textarea
              id="details"
              name="details"
              rows="4"
              class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm"
            ></textarea>
          </div>
        </div>
        <button
          type="submit"
          class="inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary"
        >
          Submit Request
        </button>
      </form>
    </div>
  </section>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Our Commitment"
    title="Dedicated to Supporting Blood Donation Efforts"
    items={[
      {
        title: 'Efficient Processing',
        description: 'We ensure that all requests are processed quickly and efficiently to meet urgent needs.',
      },
      {
        title: 'Community Engagement',
        description: 'Our programs and initiatives aim to involve the community in blood donation efforts.',
      },
      {
        title: 'Continuous Improvement',
        description: 'We strive to continuously improve our processes to better support blood donation requests.',
      },
    ]}
    image={{
     src: 'https://png.pngtree.com/thumb_back/fh260/background/20230306/pngtree-patient-during-blood-test-sampling-procedure-taken-for-analysis-photo-image_1806184.jpg',
     alt: 'Blood Donation Event',
    }}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Requests Processed', amount: '15,000+' },
      { title: 'Lives Impacted', amount: '45,000+' },
      { title: 'Blood Drives Held', amount: '200+' },
      { title: 'Years of Service', amount: '10+' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
  >
    <Fragment slot="title">
      Make a Difference Today
    </Fragment>

    <Fragment slot="subtitle">
      Your request helps ensure that blood donations are available when needed. <br class="hidden md:inline" /> Get involved and support this vital cause!
    </Fragment>
  </CallToAction>
</Layout>
