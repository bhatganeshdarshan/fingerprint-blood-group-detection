---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Fingerprint Detection Technology',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      { text: 'Learn more', href: '#features' },
    ]}
    image={{
      src: '~/assets/images/fingerprint-hero.jpg',
      alt: 'Fingerprint Detection Hero Image',
      style: {
        width: '1108px',
        height: '360px',
        objectFit: 'cover',
      }
    }}
  >
    <Fragment slot="title">
      Advanced<span class="hidden xl:inline"></span>
      <span class="text-accent dark:text-white highlight"> Fingerprint</span> Detection Technology
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Utilizing cutting-edge technology to accurately detect and analyze fingerprint patterns for enhanced security and identification. Fingerprint detection technology uses advanced algorithms to accurately analyze and identify unique fingerprint patterns, enhancing security and identification processes.</span>
      </span>
      <span class="block mb-1 sm:hidden font-bold text-grey-600">------------------------------</span>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Revolutionizing Security"
    title="Explore the Benefits of Advanced Fingerprint Detection"
    subtitle="Did you know? Fingerprints are unique to each individual, making them a reliable method for personal identification and security."
    items={[
      {
        title: 'High Accuracy',
        description: 'Detect and verify fingerprints with high precision and reliability.',
      },
      {
        title: 'Enhanced Security',
        description: 'Improve security measures by utilizing advanced fingerprint recognition technology.',
      },
      {
        title: 'Fast Processing',
        description: 'Experience quick and efficient fingerprint analysis and matching.',
      },
      {
        title: 'User-Friendly Interface',
        description: 'Our systems are designed with an intuitive interface for ease of use.',
      },
    ]}
  />

  <!-- Video and Text Section **************** -->

  <section class="flex flex-col lg:flex-row items-center lg:items-start gap-8 py-12">
    <!-- Text on the Left Side -->
    <div class="flex-1 lg:pr-8 mb-8 lg:mb-0">
      <h2 class="text-2xl font-bold mb-4">Understanding Fingerprint Uniqueness</h2>
      <p class="text-lg">
        No two people have exactly the same fingerprints. Even identical twins, with identical DNA, have different fingerprints. This uniqueness allows fingerprints to be used in all sorts of ways, including for background checks, biometric security, mass disaster identification, and of course, in criminal situations.
      </p>
    </div>

    <!-- Video on the Right Side -->
    <div class="flex-1 flex justify-center">
      <iframe
        src="https://www.youtube.com/embed/MF2yq_ZVIlY"
        title="Fingerprint Detection Technology Overview"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
        class="w-full max-w-xs h-[150px] md:h-[180px] lg:h-[200px] object-cover"
      ></iframe>
    </div>
  </section>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Our Expertise"
    title="We are committed to advancing fingerprint detection technology for superior identification and security."
    items={[
      {
        title: 'State-of-the-Art Technology',
        description: 'We leverage the latest advancements in fingerprint detection technology to deliver precise and reliable results.',
      },
      {
        title: 'Comprehensive Solutions',
        description: 'Our solutions are designed to meet a wide range of identification and security needs.',
      },
      {
        title: 'Expert Support',
        description: 'Our team of experts provides ongoing support and assistance to ensure optimal performance of our technology.',
      },
    ]}
    image={{
     src: 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSibjUftQBLuoFZ1ub_rvGG2SltPnoorwMOvQ&s',
     alt: 'High-Resolution Fingerprint Texture',
    }}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Systems Deployed', amount: '500+' },
      { title: 'Successful Matches', amount: '1.2M' },
      { title: 'Clients Served', amount: '300+' },
      { title: 'Years of Experience', amount: '10+' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Research Associated',
        href: 'https://www.matec-conferences.org/articles/matecconf/pdf/2024/04/matecconf_icmed2024_01069.pdf',
        target: '_blank',
        icon: 'tabler:download',
      },
    ]}
  >
    <Fragment slot="title">
      Advanced Fingerprint Detection Technology
    </Fragment>

    <Fragment slot="subtitle">
      Discover how our state-of-the-art fingerprint detection systems can enhance your security and identification processes. <br class="hidden md:inline" /> Donâ€™t wait to improve your security measures!
    </Fragment>
  </CallToAction>
</Layout>
